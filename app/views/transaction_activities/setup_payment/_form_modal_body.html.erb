
<div class="modal-body" id="form_body">
  
  <%= form_tag  create_transaction_activity_for_setup_payment_url , 
    :method => :post, :id => "pay_setup_fee_form"  do  %>
    <table cellpadding="0" cellspacing="0" border="0" 
          class=" table table-striped table-bordered" >
      <thead>
        <tr>
          <th colspan="2">Payment Details</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>Admin Fee</td>

          <td>
            <span class="input-xlarge uneditable-input" id="admin_fee_uneditable">Some value here</span>
            <%= hidden_field_tag 'admin_fee', '' %>
          </td>
          <td></td>
        </tr>
        <tr>
          <td>Initial Savings</td>
          <td><%= text_field_tag 'initial_savings', '' %></td>
        </tr>

        <tr>
          <td>Deposit</td>
          <td><%= text_field_tag 'deposit', '' %></td>
        </tr>

      </tbody>
    </table>
  <% end %>
</div>