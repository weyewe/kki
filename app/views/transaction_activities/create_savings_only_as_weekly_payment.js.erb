$(document).ready(function(){
  var header_html;
  var body_html;
  
  <% if @transaction_activity.nil? %>
    header_html = "<h3>Savings only payment FAIL</h3>";
    body_html = "<p>Check the payment value</p>";
  <% else %>
    header_html = "<h3>No payment declaration  is SUCCESS</h3>";
    body_html = "<p><h3><%= t 'report_metric.member' %>: <%= @member.name %></h3>"+
                "For week <%= @weekly_task.week_number %>, "+
              "it is paid as <b>ONLY SAVINGS</b></p>";
  <% end %>
  
  summonModalHTML( header_html , 
              body_html, 
                "myModal");
});