<table cellpadding="0" cellspacing="0" border="0" 
      class="table table-striped table-bordered" id="example">
  <thead>
    <tr>
      <th><%= t 'guide.grace_period_payment_detail' %>: <b><%= transaction_activity.id %></b></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>
        <%= t 'variable.cash_amount' %>
      </td>
      <td>
        <b><%= print_money( transaction_activity.total_transaction_amount ) %></b>
      </td>
    </tr>
    
    <tr>
      <td>
        <%=  t 'variable.savings_withdrawal' %>
      </td>
      <td>
        <b><%= print_money( transaction_activity.savings_withdrawal_amount ) %></b>
      </td>
    </tr>
    
    <tr>
      <td>
        <%= t 'report_metric.number_of_backlogs_paid'%>
      </td>
      <td>
        <b><%=   transaction_activity.number_of_backlogs_paid %></b>
      </td>
    </tr>
    
    <tr>
      <td>
        <%= t 'report_metric.backlogs_paid_amount'%>
      </td>
      <td>
        <b><%=   print_money( transaction_activity.grace_period_backlogs_paid_amount )  %></b>
      </td>
    </tr>
    
    <tr>
      <td>
        <%= t 'variable.extra_savings'%>
      </td>
      <td>
        <b><%= print_money( transaction_activity.extra_savings_amount ) %></b>
      </td>
    </tr>
    
    
   
  </tbody>
</table>