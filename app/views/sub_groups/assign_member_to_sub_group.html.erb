
<div class="span9 content">
  <%= create_guide("Member -> SubGroup", 
        "Group Loan ID: <b>#{@group_loan.name}</b>" + "<br />" +
        "<b>SubGroup-#{@sub_group.number}</b>" + "<br />" + 
        "Total SubGroup Member: <b>#{@sub_group.group_loan_memberships.count}</b>"   ).html_safe %>
  
  <%#= create_breadcrumb(@breadcrumbs).html_safe %>
  
  <!-- <hr /> -->
  
  
  <div class="row-fluid">
    <!-- <div class="span12"> -->
      
      <table cellpadding="0" cellspacing="0" border="0" 
            class="table table-striped table-bordered" id="example">
        <thead>
          <tr>
            <th>Name</th>
            <th>Address</th>
            <th>Current SubGroup</th>
            <th>Assign to SubGroup-<%= @sub_group.number %></th>
          </tr>
        </thead>
        <tbody>
          <% @members.each do |member| %>
            <% group_loan_membership = GroupLoanMembership.find(:first, :conditions => {
              :group_loan_id => @group_loan.id,
              :member_id => member.id
            }) %>
            <tr>
              <td class="user-nim"><%= member.name %></td>
              <td><%= member.address %></td>
              
              <td id='<%= "current_group_loans_provider_#{@sub_group.id}-consumer_#{member.id}" %>'>
                <% if group_loan_membership.sub_group.nil? %>
                  <span class="label">No SubGroup</span>
                <% elsif group_loan_membership.sub_group_id == @sub_group.id %>
                  <span class="label label-success">SubGroup-<%= @sub_group.number %></span>
                <% else %>
                  <span class="label label-info">SubGroup-<%= group_loan_membership.number %></span>
                <% end %>
              </td>
       
              <td class="well">
                <label class="checkbox">
                  
                  <% checkbox_value = member.is_sub_group_group_loan_member?(group_loan_membership, @sub_group) %>
             
                  <%= check_box_tag 'is_checked', get_checkbox_value(checkbox_value )   , 
                      checkbox_value, :class => 'checkbox_tracker', 
                      :id => "provider_#{@group_loan.id}-consumer_#{member.id}" %> Assigned
                </label>

              </td>
            </tr>
          <% end %>


         
        </tbody>
      </table>
      
      
      
      <div class=" hidden" id="checkbox_form_wrapper">
        <%= form_for GroupLoanMembership.new, :url =>group_loan_memberships_url   do |f| %>
          <%= hidden_field_tag 'membership_provider' , ''  %>
          <%= hidden_field_tag 'membership_consumer', '' %>
          <%= hidden_field_tag 'membership_decision', '' %>
        <% end %>
      </div>
