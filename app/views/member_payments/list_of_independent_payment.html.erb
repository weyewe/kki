
<div class="span9 content">
  <%= create_guide("Independent Payment Approval", 
        "Office: <b>#{@office.name}</b>" + "<br />" + 
        "Total Independent Payment Pending Approval: <b>#{@pending_approval_count}</b> ").html_safe %>
  
  <%= create_breadcrumb(@breadcrumbs).html_safe %>
  
  
   
  <div class="row-fluid">
    <div id="data_list">
      <table cellpadding="0" cellspacing="0" border="0" 
            class="table table-striped table-bordered" id="example">
        <thead>
          <tr>
            <th>Member</th>
            <th>Transaction Case</th>
            <th>Cash Amount</th>
            <th style="text-align:center;">Action</th>
          </tr>
        </thead>
        <tbody>
          <% @independent_payments.each do |independent_payment| %>
            <%= render :partial => "member_payments/independent_payment_entry" , 
                :locals => {:independent_payment => independent_payment}%>
   
          <% end %>
       
          

        </tbody>
      </table>
    </div><!-- end of #data_list -->
  </div>
  
  
  
  <div class=" hidden" id="approve_propose_form_wrapper">
    <%= form_for WeeklyTask.new, :url => approve_independent_payment_transaction_activity_url, :method => :post do |f| %>
      <%= hidden_field_tag 'entity_id' , ''  %>
      <%= hidden_field_tag 'action_role', '' %>
      <%= hidden_field_tag 'action_value', '' %>
    <% end %>
  </div>
  
  
  <div class="modal" id="myModal" style="display:none;">
     <div class="modal-header">
       <a class="close" data-dismiss="modal">×</a>
       <h3>Modal header</h3>
     </div>
     <div class="modal-body">
       <p>One fine body…</p>
     </div>
     <div class="modal-footer">
       <a href="#" class="btn modal-closer">Close</a>
       <!-- <a href="#" class="btn btn-primary">Save changes</a> -->
     </div>
   </div>
 
</div><!--/span-->