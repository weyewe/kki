

<% if has_paid_weekly_payment == false  %>
<div class="row-fluid tab-pane fade  active in pane_wrapper" id="single_extra_savings" >
<% else %>
<div class="row-fluid tab-pane fade   in pane_wrapper" id="single_extra_savings" >
<% end %>
  <div class="span8">

  
    
    <%= form_tag  create_single_week_extra_savings_weekly_payment_url(@weekly_task, @member) , 
      :method => :post, :id => "form_single_extra_savings_payment", 
      :class => "prevent_double_submit"  do  %>
      <table cellpadding="0" cellspacing="0" border="0" 
            class=" table table-striped table-bordered" >
        <thead>
          <tr>
            <th colspan="2">Single Week + Extra Savings</th>
          </tr>
        </thead>
        <tbody>
          <%#= hidden_field_tag 'group_loan_membership_id', '' %>
        
          <tr>
            <td>Cash Amount:</td>
            <td><%= text_field_tag 'ses_cash_amount', '' %></td>
          </tr>
          
          <tr>
            <td></td>
            <td>
              <div class="form-actions">
                <button class="btn btn-primary" id="exe_single_extra_savings_payment" type="submit">Pay Single Week + Extra Savings</button>
              </div>
            </td>
          </tr>


        </tbody>
      </table>
    <% end %>
    
    
   
    
  </div> 
    
    
    
  <div class="span4">
    <table cellpadding="0" cellspacing="0" border="0" 
          class="table table-striped table-bordered" id="example">
      <thead>
        <tr><th colspan="2" style="text-align:center;">Current Savings</th></tr>
      </thead>
      <tbody>
          <tr>
            <td>Total Savings</td>
            <td id="total_principal"><%= print_money(@member.total_savings)%> </td>
          </tr>
          
          <tr>
            <td>Compulsory Savings</td>
            <td id="total_principal"><%= print_money(@member.saving_book.total_compulsory_savings)%> </td>
          </tr>
          
          <tr>
            <td>Voluntary Savings</td>
            <td id="total_principal"><%= print_money(@member.saving_book.total_extra_savings)%> </td>
          </tr>
      </tbody>
    </table>
    
  </div><!--/span-->
  
</div><!--/row-->






