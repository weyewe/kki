<div class="span9 content">
  <%= create_guide("Mark Attendance", 
        "Group loan for office: <b>#{@office.name}</b>" + "<br />" + 
        "Group Loan: <b>#{@group_loan.name}</b>" + "<br />" + 
        "Total Member: <b>#{@group_loan.members.count}</b>"  ).html_safe %>
  
  <%= create_breadcrumb(@breadcrumbs).html_safe %>
  
  
   
  <div class="row-fluid">
    <div id="data_list">
      <table cellpadding="0" cellspacing="0" border="0" 
            class="table table-striped table-bordered" id="example">
        <thead>
          <tr>
            <th>Member Name</th>
            <th>Address</th>
            <th>Unpaid Backlogs</th>
            <th colspan="2">Basic Payment</th>
            <!-- <th>Backlog</th> -->
            <th>Special Payment</th>
            
          </tr>
        </thead>
        <tbody>
          <% @group_loan_memberships.each do |group_loan_membership| %>
            <%= render :partial => "weekly_tasks/make_payment" , 
                :locals => { :group_loan_membership => group_loan_membership, 
                  :weekly_task => @weekly_task}  %>
          <% end %>
       
          

        </tbody>
      </table>
    </div><!-- end of #data_list -->
  </div>
  
  
  
  <div class=" hidden" id="approve_propose_form_wrapper">
    <%= form_for WeeklyTask.new, :url => create_basic_weekly_payment_url(@weekly_task.id)   do |f| %>
      <%= hidden_field_tag 'entity_id' , ''  %>
      <%= hidden_field_tag 'action_role', '' %>
      <%= hidden_field_tag 'action_value', '' %>
    <% end %>
  </div>
  
  
  <div class="modal" id="basicModal" style="display:none;">
     <div class="modal-header">
       <a class="close" data-dismiss="modal">×</a>
       <h3>Modal header</h3>
     </div>
     <div class="modal-body">
       <p>One fine body…</p>
     </div>
     <div class="modal-footer">
       <a href="#" class="btn modal-closer">Close</a>
       <!-- <a href="#" class="btn btn-primary">Save changes</a> -->
     </div>
   </div>
   
   <div class="modal" id="backlogModal" style="display:none;">
      <div class="modal-header">
        <a class="close" data-dismiss="modal">×</a>
        <h3>Modal header</h3>
      </div>
      <div class="modal-body">
        <p>One fine body…</p>
      </div>
      <div class="modal-footer">
        <a href="#" class="btn modal-closer">Close</a>
        <!-- <a href="#" class="btn btn-primary">Save changes</a> -->
      </div>
    </div>
    
    <div class="modal" id="specialModal" style="display:none;">
       <div class="modal-header">
         <a class="close" data-dismiss="modal">×</a>
         <h3>Modal header</h3>
       </div>
       <div class="modal-body">
         <p>One fine body…</p>
       </div>
       <div class="modal-footer">
         <a href="#" class="btn modal-closer">Close</a>
         <!-- <a href="#" class="btn btn-primary">Save changes</a> -->
       </div>
     </div>
  
  
  

</div><!--/span-->















