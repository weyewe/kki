<div class="span9 content">
  <%= create_guide("Select Weekly Group Payment", 
        "Group loan for office: <b>#{@office.name}</b>" + "<br />" + 
        "Group Loan: <b>#{@group_loan.name}</b>" + "<br />" + 
        "Total Member: <b>#{@group_loan.active_group_loan_memberships.count}</b>" + "<br />" + 
        "Completed Group Payment: <b>#{@group_loan.total_completed_group_payment}</b>" ).html_safe %>
  
  <%= create_breadcrumb(@breadcrumbs).html_safe %>
  
  
   
  <div class="row-fluid">
    <div id="data_list">
      <table cellpadding="0" cellspacing="0" border="0" 
            class="table table-striped table-bordered" id="example">
        <thead>
          <tr>
            <th>Week No</th>
            <th>Total Member</th>
            <th>Total Member Paid</th>
            <th>Only Savings</th>
            <th>No Payment</th>
            <th style="text-align:center;">Close Payment</th>
          </tr>
        </thead>
        <tbody>
          <% @weekly_tasks.each do |weekly_task| %>
            <%= render :partial => "weekly_tasks/select_weekly_payment" , 
                :locals => {:weekly_task => weekly_task,
                  :total_group_member => @group_loan.active_group_loan_memberships.count, 
                  :group_loan => @group_loan} %>
          <% end %>
       
          

        </tbody>
      </table>
    </div><!-- end of #data_list -->
  </div>
  
  
  
  <div class=" hidden" id="approve_propose_form_wrapper">
    <%= form_for GroupLoan.new, :url => close_weekly_payment_url   do |f| %>
      <%= hidden_field_tag 'entity_id' , ''  %>
      <%= hidden_field_tag 'action_role', '' %>
      <%= hidden_field_tag 'action_value', '' %>
    <% end %>
  </div>
  
  
  <div class="modal" id="myModal" style="display:none;">
     <div class="modal-header">
       <a class="close" data-dismiss="modal">×</a>
       <h3>Modal header</h3>
     </div>
     <div class="modal-body">
       <p>One fine body…</p>
     </div>
     <div class="modal-footer">
       <a href="#" class="btn modal-closer">Close</a>
       <!-- <a href="#" class="btn btn-primary">Save changes</a> -->
     </div>
   </div>
  
  
  

</div><!--/span-->















