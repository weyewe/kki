<% member = group_loan_membership.member %>
<% group_loan = group_loan_membership.group_loan %>



<tr id="make_payment_wrapper-<%= member.id %>">
  
  <td><%= member.name %></td>
  <td><%= member.address %></td>
  <!-- basic payment -->
  <% member_payment =  weekly_task.member_payment_for(member) %>
  
  
  
  
  
    <% if weekly_task.has_paid_weekly_payment?(member)  %>
      <td colspan="2" style="text-align:center;">
        
         <% if member_payment.is_full_payment? %>
          <span class="label label-success">PAID</span>
         <% elsif member_payment.only_savings_payment? %>
          <span class="label label-warning">Only Savings</span>
         <% elsif  member_payment.no_payment?  %>
          <span class="label label-important">No Payment</span>
         <% end %>
      </td>
    <% else %>
      <td><%= print_money(group_loan_membership.group_loan_product.total_weekly_payment)  %></td>
      <td>
        <a href="#" class="btn propose action"
          id="make_basic_payment-<%= member.id %>">Pay</a>
      </td>
      
    <% end %>
  
 
  
  

    <!-- back log payment  -->
     <!-- <td style="text-align:center;">50,000.00</td> -->

    <!-- Special Payment -->

  <% if weekly_task.has_paid_weekly_payment?(member)  %>
     <td style="text-align:center;">
       
       <% if member_payment.is_full_payment? %>
        <span class="label label-success">PAID</span>
       <% elsif member_payment.only_savings_payment? %>
        <span class="label label-warning">Only Savings</span>
       <% elsif  member_payment.no_payment?  %>
        <span class="label label-important">No Payment</span>
       <% end %>
       
     </td>
   <% else %>
     <td>
       <%= link_to "Special Payment",
          special_weekly_payment_for_member_url(group_loan, weekly_task, member), 
            :class => "btn", 
            :id => "make_basic_payment-#{member.id}"  %>
      </td>
   <% end %>
       
       <!-- No payment -->
       
 


       
    
</tr>