<tr id="weekly_payment_wrapper-<%= weekly_task.id %>">
  <td>
    <% if weekly_task.member_payment_can_be_started? %>
      <%= link_to "Week: #{weekly_task.week_number} ", 
          make_member_payment_url(group_loan.id, weekly_task.id) %>
    <% else %>
      <%= "Week: #{weekly_task.week_number} " %>
    <% end %>
    
  </td>
  <td><%= total_group_member %></td>
  <!-- <td><%#= weekly_task.total_members_paid %></td> -->
  <td><%= weekly_task.total_members_paid_only_savings %></td>
  <td><%= weekly_task.total_members_not_paying %></td>
  <td style='text-align:center;'>
    
          
      <% if weekly_task.member_payment_not_closed? and 
            weekly_task.member_payment_can_be_closed? %>
        <a href="#" class="btn propose action"
            id="close_weekly_payment-<%= weekly_task.id %>"><%= t 'trigger.close' %></a>
      <% elsif weekly_task.member_payment_not_closed? and 
                 not weekly_task.member_payment_can_be_closed? %>
        <span class="label">--</span>
      <% elsif weekly_task.member_payment_closed? %>
        <span class="label label-success"><%= t 'status.closed' %></span>
      <% end %>
  </td>
</tr>