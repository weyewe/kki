$(document).ready(function(){
	// remove the spin
	
	var $modal = $("#editEntry");
	var $form = $("form", $modal );
	$form.hideLoading();
	
	// if update is successful
		// remove the form 
		// hide the modal 
		// update the row entry 
	// else
		// replace the form with the faulty one 
		// show all the error 
	
	
		<% if   @has_no_errors  %> 
			// clean the add product form
			$form.remove(); 

			<% new_entry  = escape_javascript( render :partial =>  'members/entry', :locals => {
				:object => @member 
			} )%>

			$("#entry-<%= @member.id %>").replaceWith('<%= new_entry %>') 
 
			$modal.modal('hide'); 

			alert("Berhasil update peminjam: <%= @member.name %>")

		<% elsif  not @has_no_errors %> 
			<% new_form = escape_javascript(   render :partial => "members/new_object_form", :locals => {
		    :new_object => @member, 
				:url => update_member_url(@member.id) 
		  })%>
			//replace the form, show the edit
			$form.replaceWith("<%= new_form %>"); 

			alert("Gagal update peminjam: <%= @member.name %>")
	 
		<% end %>



		jQuery('.prevent_double_submit').preventDoubleSubmit(); 
});