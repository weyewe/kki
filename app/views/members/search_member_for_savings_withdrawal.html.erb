
<div class="span9 content">
  <%= create_guide("Savings Withdrawal",  
        "Office: #{@office.name}" + "<br />"    +  
        "Total Office Members: #{@office.members.count} "         ).html_safe %>
  
  <%#= create_breadcrumb(@breadcrumbs).html_safe %>

  
  <div class="row-fluid">
    <div class="span8">
    

          
      <%= form_tag  search_member_for_savings_withdrawal_url, 
      :method => :get, :id => "search_member"  do  %>
        <table cellpadding="0" cellspacing="0" border="0" 
          class="table table-striped table-bordered" id="example">
          <thead>
            <tr>
              <th colspan="2" style="text-align:left;">
                Search Member
              </th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td style="text-align:right;"><b>Member Name</b></td>
              <td><%= text_field_tag 'member_name' %></td>
            </tr>

            <tr>
              <td colspan="2" style="text-align:center;">
                <button href="#" class="btn btn-primary" >
                  Search Member
                </button>
              </td>
            </tr>
          </tbody>
        </table>
    <% end %>
      
    </div> 
    <div class="span4">
    </div>
      
      
      
    
  </div><!--/row-->
   <hr />
  <div class="row-fluid">
    <div id="data_list">
      <h2>Total Members in office <%= @office.name %>: <%= @office.members.count %> </h2>
      
      <h2>Member matching result: <%= @members.count %></h2>
      
      
      <table cellpadding="0" cellspacing="0" border="0" 
            class="table table-striped table-bordered" id="example">
        <thead>
          <tr>
            <th>Nama</th>
            <th>No KTP</th>
            <th>Kecamatan</th>
            <th>Desa/Kelurahan</th>
            <th>RW</th>
            <th>RT</th>
            <th>Voluntary Savings</th>
            
          </tr>
        </thead>
        <tbody>
          <% @members.each do |office_member| %>
            <% commune = Commune.find_by_id office_member.commune_id %>
            <% village = commune.village %>
            <% subdistrict = village.subdistrict %>
            <% saving_book = office_member.saving_book%>
            <tr>
              <td><%= link_to office_member.name, input_value_for_cash_savings_withdrawal_url(office_member) %></td>
              <td><%= office_member.id_card_no %></td>
              <td><%= subdistrict.name %></td>
              <td><%= village.name %></td>
              <td><%= commune.number %></td>
              <td><%= office_member.neighborhood_no  %></td>
              <td><%= print_money( saving_book.total_extra_savings) %></td>
            </tr>
          <% end %>

        </tbody>
      </table>
    </div><!-- end of #data_list -->
  </div>

</div><!--/span-->















