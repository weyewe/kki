	var $modal = $("#editEntry");
	var $form = $("form", $modal );
	$form.hideLoading();
	$form.remove(); 
	
	$modal.modal('hide'); 
	
  <% new_row = escape_javascript( render :partial => "weekly_tasks/mark_attendance" , 
	    :locals => { 
					:group_loan_membership => @group_loan_membership, 
	      	:weekly_task => @weekly_task
	})%>
        

  $("#mark_attendance_wrapper-<%= @member.id %>").replaceWith('<%= new_row %>');
});

 