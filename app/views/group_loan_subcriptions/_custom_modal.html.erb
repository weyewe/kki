<div class="modal" id="myModal-<%= group_loan_product.id %>" style="display:none;">
  <div class="modal-header">
    <a class="close" data-dismiss="modal">Ã—</a>
    <h3>Amount: <%= print_money( group_loan_product.loan_amount) %> ;
      interest: <%= group_loan_product.interest_rate_in_percent %> % </h3>
    </div>
    <div class="modal-body">
      <table cellpadding="0" cellspacing="0" border="0" 
      class="table table-striped table-bordered" id="example">
      <thead>
        <tr>
          <th colspan="2">Loan Product Details</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><b>Admin Fee</b></td>
          <td><b><%= print_money( group_loan_product.admin_fee) %></b></td>
        </tr>
        <tr>
          <td><b>Initial Saving</b></td>
          <td><b><%= print_money( group_loan_product.initial_savings) %></b></td>
        </tr>
        <tr>
          <td>Weekly Principal</td>
          <td><%= print_money( group_loan_product.principal) %></td>
        </tr>
        <tr>
          <td>Weekly Interest</td>
          <td><%= print_money( group_loan_product.interest) %></td>
        </tr>
        <tr>
          <td>Weekly Min. Saving</td>
          <td><%= print_money( group_loan_product.min_savings) %></td>
        </tr>
        <tr>
          <td><b>Total Min. Weekly Payment</b></td>
          <td><b><%=  group_loan_product.total_weekly_payment %></b></td>
        </tr>
        <tr>
          <td><b>Duration</b></td>
          <td><b><%=  group_loan_product.total_weeks.to_s  + " weeks"%></b></td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="modal-footer">
    <a href="#" class="btn modal-closer">Close</a>
    <!-- <a href="#" class="btn btn-primary">Save changes</a> -->
  </div>
</div>