<div class="modal" id="myModal-<%= group_loan_product.id %>" style="display:none;">
  
  <div class="modal-header">
    <a class="close" data-dismiss="modal">Ã—</a>
    <h3><%= t 'variable.amount' %>: <%= print_money( group_loan_product.loan_amount) %> ;
      interest: <%= group_loan_product.interest_rate_in_percent %> % </h3>
  </div>
  <div class="modal-body">
    <table cellpadding="0" cellspacing="0" border="0" 
      class="table table-striped table-bordered" id="example">
      <thead>
        <tr>
          <th colspan="2"><%=  t 'guide.loan_product_details' %></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><b><%= t 'variable.admin_fee' %></b></td>
          <td><b><%= print_money( group_loan_product.admin_fee) %></b></td>
        </tr>
        <tr>
          <td><b>Initial Saving</b></td>
          <td><b><%= print_money( group_loan_product.initial_savings) %></b></td>
        </tr>
        <tr>
          <td><%= t 'variable.weekly_principal' %></td>
          <td><%= print_money( group_loan_product.principal) %></td>
        </tr>
        <tr>
          <td><%= t 'report_metric.weekly_interest'%></td>
          <td><%= print_money( group_loan_product.interest) %></td>
        </tr>
        <tr>
          <td><%= t 'variable.weekly_min_savings'%></td>
          <td><%= print_money( group_loan_product.min_savings) %></td>
        </tr>
        <tr>
          <td><b><%= t 'variable.total_min_weekly_payment' %></b></td>
          <td><b><%=  print_money( group_loan_product.total_weekly_payment ) %></b></td>
        </tr>
        <tr>
          <td><b><%= t 'variable.duration' %></b></td>
          <td><b><%=  group_loan_product.total_weeks.to_s  + " weeks"%></b></td>
        </tr>
      </tbody>
    </table>
  </div>
  
  <div class="modal-footer">
    <a href="#" class="btn modal-closer"><%= t 'trigger.close' %></a>
  </div>
  
</div>