<div class="summary_product_selector">
  <div class="modal-header">
    <a class="close" data-dismiss="modal">Ã—</a>
    <h3><%= t 'guide.select_group_loan_product'%> </h3>
  </div>
  <div class="modal-body">
    <table cellpadding="0" cellspacing="0" border="0" 
      class="table table-striped table-bordered" id="example">
      <thead>
        <tr>
          <th><%= t 'report_metric.loan_amount' %></th>
          <th><%= t 'variable.interest'  %></th>
          <th><%= t 'variable.duration' %></th>
          <th colspan="2" style="text-align:center;"><%= t 'trigger.action' %></th>
        </tr>
      </thead>
      <tbody>
        <% group_loan_products.each do |group_loan_product| %>
          <tr>
            <td><%= print_money( group_loan_product.loan_amount) %></td>
            <td><%= group_loan_product.interest_rate_in_percent %> %</td>
            <td><%=  group_loan_product.total_weeks.to_s  + " #{t 'variable.weeks'}"%></td>
            <td style="text-align:center;">
              <a class="btn group_loan_product_details_selector"
                id="product_details_id-<%= group_loan_product.id %>">
                 <%= t 'trigger.details' %>
              </a>
            </td>
            <td style="text-align:center;">
              <a class="btn group_loan_product_select" 
                  id="group_loan_product_select_button-<%= group_loan_product.id %>">
               <%= t 'trigger.select' %>
             </a>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>