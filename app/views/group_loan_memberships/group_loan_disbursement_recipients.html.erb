
<div class="span9 content">
  <%= create_guide("Loan Disbursement", 
        "Office: <b>#{@office.name}</b>" + "<br />" + 
        "Group Loan ID: <b>#{@group_loan.name}</b>" + "<br />" + 
        "Total Group Member: <b>#{@group_loan_memberships.count}</b>").html_safe %>
  
  <%#= create_breadcrumb(@breadcrumbs).html_safe %>
  
  <!-- <hr /> -->
  
  
  <div class="row-fluid">
    <!-- <div class="span12"> -->
      
      <table cellpadding="0" cellspacing="0" border="0" 
            class="table table-striped table-bordered" id="example">
        <thead>
          <tr>
            <th>Name</th>
            <th>Amount</th>
            <th style="text-align:center;">Action</th>
            <th>Transaction ID</th>
          </tr>
        </thead>
        <tbody>
          <% @group_loan_memberships.each do |group_loan_membership| %>
          <%#= render :partial => "group_loan_subcriptions/group_loan_product_row", 
                  :locals => { 
                    :group_loan => @group_loan ,
                    :member => member
                  }
          %>
            <%= render :partial => "group_loan_memberships/member_to_be_disbursed", 
                    :locals => { 
                      :group_loan_membership => group_loan_membership 
                    }
            %>
          <% end %>


         
        </tbody>
      </table>
      
      
      
      <div class=" hidden" id="approve_propose_form_wrapper">
        <%= form_for GroupLoanMembership.new, :url => execute_loan_disbursement_url   do |f| %>
          <%= hidden_field_tag 'entity_id' , ''  %>
          <%= hidden_field_tag 'action_role', '' %>
          <%= hidden_field_tag 'action_value', '' %>
        <% end %>
      </div>
    

    <!-- </div> -->   <!--/span12-->
  </div><!--/row-->

</div><!--/span-->

