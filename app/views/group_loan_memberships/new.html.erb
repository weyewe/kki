
<div class="span9 content">
  <%= create_guide("Assign Member to Group Loan", 
        "Group Loan ID: <b>#{@group_loan.name}</b>").html_safe %>
  
  <%#= create_breadcrumb(@breadcrumbs).html_safe %>
  
  <!-- <hr /> -->
  
  
  <div class="row-fluid">
    <!-- <div class="span12"> -->
      
      <table cellpadding="0" cellspacing="0" border="0" 
            class="table table-striped table-bordered" id="example">
        <thead>
          <tr>
            <th>Name</th>
            <th>Past</th>
            <th>Current</th>
            <th>Active</th>
            <th>Assign to GroupLoan</th>
          </tr>
        </thead>
        <tbody>
          <% @commune_members.each do |member| %>
            <tr>
              <td class="user-nim"><%= member.name %></td>
              <td><%= member.past_group_loans %></td>
              <td><%= member.current_assigned_group_loans %></td>
              <td class="total_active_group_loan"><%= member.current_active_group_loans %></td>
              <td class="well">
                <label class="checkbox">
                  <% checkbox_value = member.is_group_loan_member?(@group_loan) %>
             
                  <%= check_box_tag 'is_checked', get_checkbox_value(checkbox_value )   , 
                      checkbox_value, :class => 'checkbox_tracker', 
                      :id => "provider_#{@group_loan.id}-consumer_#{member.id}" %> Taking
                </label>

              </td>
            </tr>
          <% end %>


         
        </tbody>
      </table>
      
      
      
      <div class=" hidden" id="checkbox_form_wrapper">
        <%= form_for GroupLoanMembership.new, :url =>group_loan_memberships_url   do |f| %>
          <%= hidden_field_tag 'membership_provider' , ''  %>
          <%= hidden_field_tag 'membership_consumer', '' %>
          <%= hidden_field_tag 'membership_decision', '' %>
        <% end %>
      </div>
