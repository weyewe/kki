
<div class="span9 content">
  <%= create_guide("Approve Setup Collection", 
        "#{t 'guide.office'}: <b>#{@office.name}</b>" + "<br />" + 
        "#{t 'guide.total_pending_approval_for_group_loan'}: <b>#{@pending_setup_collection_group_loans.count}</b> ").html_safe %>
  
  <%#= create_breadcrumb(@breadcrumbs).html_safe %>
  
  
   
  <div class="row-fluid">
    <div id="data_list">
      <table cellpadding="0" cellspacing="0" border="0" 
            class="table table-striped table-bordered" id="example">
        <thead>
          <tr>
            <th><%= t 'report_metric.group_name' %></th>
            <th>Lokasi RW</th>
            <th>Total Member</th>
            <th>Total Initial Savings</th>
            <th>Total Deposit</th>
            <th>Total <%= t 'variable.admin_fee' %></th>
            <th><%= t 'report_metric.total' %></th>
       
            <th colspan="2" style="text-align:center;"><%= t 'trigger.action' %></th>
            
          </tr>
        </thead>
        <tbody>
          <% @pending_setup_collection_group_loans.each do |group_loan| %>
            <%#= render :partial => "group_loans/group_loan_starter" , 
                :locals => {:group_loan => group_loan}%>
            <%= render :partial => "group_loans/setup_payment_approval" , 
                :locals => {:group_loan => group_loan}%>
     
          <% end %>
       
          

        </tbody>
      </table>
    </div><!-- end of #data_list -->
  </div>
  
  <div class=" hidden" id="approve_propose_form_wrapper">
    <%= form_for GroupLoan.new, :url => approve_setup_fee_collection_url   do |f| %>
      <%= hidden_field_tag 'entity_id' , ''  %>
      <%= hidden_field_tag 'action_role', '' %>
      <%= hidden_field_tag 'action_value', '' %>
    <% end %>
  </div>
  
  
  
  <div class="modal" id="myModal" style="display:none;">
     <div class="modal-header">
       <a class="close" data-dismiss="modal">×</a>
       <h3>Modal header</h3>
     </div>
     <div class="modal-body">
       <p>One fine body…</p>
     </div>
     <div class="modal-footer">
       <a href="#" class="btn modal-closer"><%= t 'trigger.close' %></a>
       <!-- <a href="#" class="btn btn-primary">Save changes</a> -->
     </div>
   </div>
   
   

</div><!--/span-->















