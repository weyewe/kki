
<div class="span9 content">
  <%= create_guide("Standard Default Resolution", 
        "Office: <b>#{@office.name}</b>" + "<br />" + 
        "Group Loan: <b>#{@group_loan.name}</b> "  + "<br />" + 
        "Total Defaultee: <b>#{@total_defaultee}</b>" + "<br />" + 
        "Total Default Amount: <b>#{print_money(@group_loan.unpaid_grace_period_amount )}</b>" + "<br />" + 
        "Total Amount Recovered: <b>#{print_money( @group_loan.total_amount_deducted_for_default_payment_resolution )}</b>" ).html_safe %>
        
        <!-- + "<br />" + 
          "Office Loss: <b>#{print_money(@office_loss)}</b>" -->
  
  <%= create_breadcrumb(@breadcrumbs).html_safe %>
  
  
   
  <div class="row-fluid">
    <div id="data_list">
      <table cellpadding="0" cellspacing="0" border="0" 
            class="table table-striped table-bordered" id="example">
        <thead>
          <tr>
            <th>Member</th>
            <th>Total Savings</th>
            <th>Compulsory Savings</th>
            <th>Voluntary Savings</th>
            <th>Default Status</th>
            <th>Unpaid Amount</th>
            <th>Deduction Amount</th>
            <th>Compulsory Savings Deduction</th>
            <th>Voluntary Savings Deduction</th>
          </tr>
        </thead>
        <tbody>
          <% @default_payments.each do |dp| %>
            <%= render :partial => "group_loans/standard_default_entry" , 
                :locals => {:default_payment => dp}%>
          <% end %>
        </tbody>
      </table>
    </div><!-- end of #data_list -->
  </div>
  
  
  <%= render :partial => "group_loans/propose_standard_default_resolution", :locals => {
    :group_loan => @group_loan
  }%>
  


   
 
  
  <div class=" hidden" id="approve_propose_form_wrapper">
    <%= form_for GroupLoan.new, :url => execute_propose_standard_default_resolution_url   do |f| %>
      <%= hidden_field_tag 'entity_id' , ''  %>
      <%= hidden_field_tag 'action_role', '' %>
      <%= hidden_field_tag 'action_value', '' %>
    <% end %>
  </div>
  
  
  
  <div class="modal" id="myModal" style="display:none;">
     <div class="modal-header">
       <a class="close" data-dismiss="modal">×</a>
       <h3>Modal header</h3>
     </div>
     <div class="modal-body">
       <p>One fine body…</p>
     </div>
     <div class="modal-footer">
       <a href="#" class="btn modal-closer">Close</a>
       <!-- <a href="#" class="btn btn-primary">Save changes</a> -->
     </div>
   </div>
   
   

</div><!--/span-->















