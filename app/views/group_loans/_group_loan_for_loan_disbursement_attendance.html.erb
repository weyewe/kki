<tr id="loan_disbursement_attendance-<%= group_loan.id %>">
  <td><%= link_to group_loan.name, mark_loan_disbursement_attendance_url(group_loan) %></td>
  <td><%= group_loan.get_commune %></td>
  <td><%= group_loan.active_group_loan_memberships.count %></td>
  <td><%= group_loan.group_loan_memberships.where(:is_attending_loan_disbursement => true).count %></td>
  <td><%= group_loan.group_loan_memberships.where(:is_attending_loan_disbursement => false).count %></td>
  <td><%= group_loan.group_loan_memberships.where(:is_attending_loan_disbursement => nil).count %></td>
  <td>
    <% if group_loan.loan_disbursement_finalization_proposed == false  %>
      <a href="#" class="btn propose action"
          id="close_weekly_payment-<%= group_loan.id %>">Finalize</a>
    <% elsif group_loan.loan_disbursement_finalization_proposed == true %>
      <span class="label label-success">Proposed</span>
    <% end %>
    
  </td>
  <td>Pending</td>
</tr>