<tr id="loan_disbursement_attendance-<%= group_loan.id %>">
  <td><%= link_to group_loan.name, mark_loan_disbursement_attendance_url(group_loan) %></td>
  <td><%= group_loan.get_commune %></td>
  <td><%= group_loan.group_loan_memberships_attendance_display_for_loan_disbursement.count %></td>
  <td><%= group_loan.group_loan_memberships_attendance_display_for_loan_disbursement.where(:is_attending_loan_disbursement => true).count %></td>
  <td><%= group_loan.group_loan_memberships_attendance_display_for_loan_disbursement.where(:is_attending_loan_disbursement => false).count %></td>
  <td><%= group_loan.group_loan_memberships_attendance_display_for_loan_disbursement.where(:is_attending_loan_disbursement => nil).count %></td>
  <td>
    <% if group_loan.loan_disbursement_finalization_proposed == false  %>
      <a href="#" class="btn propose action"
          id="close_weekly_payment-<%= group_loan.id %>"><%= t 'trigger.finalize' %></a>
    <% elsif group_loan.loan_disbursement_finalization_proposed == true %>
      <span class="label label-success"><%= t 'status.proposed'%></span>
    <% end %>
    
  </td>
  <td>
    <% if group_loan.is_loan_disbursement_attendance_done == true %>
      <span class="label label-success"><%= t 'status.approved' %></span>
    <% elsif group_loan.is_loan_disbursement_attendance_done == false  %>
      <span class="label"><%= t 'status.pending' %></span>
    <% end %>
  </td>
</tr>