
<div class="span9 content">
  <%= create_guide("#{t 'guide.group_loan_assignment'}", 
        "#{t 'process.select_group_loan'}" + "<br />" + 
        "#{t 'guide.office'}: <b>#{@office.name}</b>" + "<br />" + 
        "#{t 'guide.total_active_group_loan'}: <b>#{@active_group_loans.count}</b> ").html_safe %>
  
  <%= create_breadcrumb(@breadcrumbs).html_safe %>
  
  
   
  <div class="row-fluid">
    <div id="data_list">
      <table cellpadding="0" cellspacing="0" border="0" 
            class="table table-striped table-bordered" id="example">
        <thead>
          <tr>
            <th><%= t 'report_metric.group_name' %></th>
            <th>Lokasi RW</th>
            <th>Total Members</th>
            <th>Field Officers</th>
            <th>Loan Inspectors</th>
          </tr>
        </thead>
        <tbody>
          <% @active_group_loans.each do |group_loan| %>
            <tr>
              <td><%= link_to group_loan.name, new_loan_inspector_assignment_to_employee_url(group_loan) %></td>
              <td><%= group_loan.get_commune %></td>
              <td><%= group_loan.members.count %></td>
              <td><%= group_loan.field_workers.count %></td>
              <td><%= group_loan.loan_inspectors.count %></td>
            </tr>
          <% end %>

        </tbody>
      </table>
    </div><!-- end of #data_list -->
  </div>

</div><!--/span-->















