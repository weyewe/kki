<tr id="start_group_loan-<%= group_loan.id %>">
  <td><%= link_to group_loan.name, group_loan_memberships_for_setup_fee_url(group_loan) %></td>
  <td><%= group_loan.get_commune %></td>
  <td><%= group_loan.members.count %></td>
  
  <!-- For details, see select_gruop_laon_setup_for_finalization -->
  <td><%= group_loan.paid_members_count %></td>
  <td>
    <% if group_loan.is_setup_fee_collection_finalized == false %>
      <a href="#" class="btn propose action"
          id="finalize-<%= group_loan.id %>"><%= t 'trigger.finalize' %></a>
    <% else %>
      <span class="label label-info"><%= t 'status.finalized'%></span>
    <% end %>
  </td>

  <td>
    <% if group_loan.is_setup_fee_collection_approved  == false%>
      <span class="label"><%= t 'status.pending' %></span>
    <% else %>
      <span class="label label-success"><%= t 'status.approved' %></span>
    <% end %>
    
  </td>
  
</tr>