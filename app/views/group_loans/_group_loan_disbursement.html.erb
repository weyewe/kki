<tr id="group_loan_disbursement-<%= group_loan.id %>">
   
  
  <td><%= link_to group_loan.name, group_loan_disbursement_recipients_url(group_loan) %></td>
  <td><%= group_loan.get_commune %></td>
  <td><%= group_loan.group_loan_memberships.where(:is_attending_financial_lecture => true).count %></td>
  <td><%= print_money( group_loan.total_withdrawn_amount ) %></td>
  
  <td><%= group_loan.disbursed_members.count  %></td>
  <td><%= print_money( group_loan.total_returned_cash_from_loan_disbursement ) %></td>

  <td style='text-align:center;'>
    <% if group_loan.is_loan_disbursement_approved  == false%>
      <a href="#" class="btn propose action"
          id="finalize-<%= group_loan.id %>"><%= t 'trigger.finalize' %></a>
    <% else %>
      <span class="label label-info"><%= t 'status.done' %></span>
    <% end %>
    
  </td>
  
</tr>


