<div class="span9 content">
  <%= create_guide("Loan Disbursement Attendance", 
        "#{t 'guide.office'}: <b>#{@office.name}</b>" + "<br />" + 
        "#{t 'guide.group_loan'}: <b>#{@group_loan.name}</b>" + "<br />" + 
        "Active Member: <b>#{@group_loan_memberships.count}</b>"  ).html_safe %>
  
  <%= create_breadcrumb(@breadcrumbs).html_safe %>
  
  
   
  <div class="row-fluid">
    <div id="data_list">
      <table cellpadding="0" cellspacing="0" border="0" 
            class="table table-striped table-bordered" id="example">
        <thead>
          <tr>
            <th><%= t 'report_metric.member' %></th>
            <th><%= t 'variable.address'%></th>
            <th style="text-align:center;" colspan="2"><%= t 'report_metric.mark_attendance' %></th>
            <th><%= t 'report_metric.loan_amount' %></th>
            <th>Setup Fee</th>
            <th>Disbursed Amount</th>
          </tr>
        </thead>
        <tbody>
          <% @group_loan_memberships.each do |group_loan_membership| %>
            <%= render :partial => "group_loans/loan_disbursement_marking" , 
                :locals => { :group_loan_membership => group_loan_membership, 
                  :group_loan => @group_loan}  %>
          <% end %>
       
          

        </tbody>
      </table>
    </div><!-- end of #data_list -->
  </div>
  
  
  
  <div class=" hidden" id="approve_propose_form_wrapper">
    <%= form_for GroupLoanMembership.new, :url => execute_loan_disbursement_attendance_marking_url    do |f| %>
      <%= hidden_field_tag 'entity_id' , ''  %>
      <%= hidden_field_tag 'action_role', '' %>
      <%= hidden_field_tag 'action_value', '' %>
    <% end %>
  </div>
  
  
  <div class="modal" id="myModal" style="display:none;">
     <div class="modal-header">
       <a class="close" data-dismiss="modal">×</a>
       <h3>Modal header</h3>
     </div>
     <div class="modal-body">
       <p>One fine body…</p>
     </div>
     <div class="modal-footer">
       <a href="#" class="btn modal-closer"><%= t 'trigger.close' %></a>
     </div>
   </div>
  
  
  

</div><!--/span-->















