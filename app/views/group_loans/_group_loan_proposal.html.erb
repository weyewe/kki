<tr id="finalize_group_loan-<%= group_loan.id %>">
  <td><%=  group_loan.name %></td>
  <td><%= group_loan.get_commune %></td>
  <td><%= group_loan.members.count %></td>
  <td><%= group_loan.unassigned_members.count %></td>
  <td style="text-align:center;">
    <% if group_loan.is_proposed == false %>
      <a href="#" class="btn propose action"
          id="finalize-<%= group_loan.id %>"><%= t 'trigger.finalize' %></a>
    <% else %>
      <span class="label label-info"><%= t 'status.finalized'%></span>
    <% end %>
  </td>
  
  
  
  
  <td style="text-align:center;">
    <% if group_loan.is_started == false %>
      <span class="label"><%= t 'status.pending' %></span>
    <% else %>
      <span class="label label-success"><%= t 'status.approved' %></span>
    <% end %>
  </td> 
</tr>