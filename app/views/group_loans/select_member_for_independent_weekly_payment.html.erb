
<div class="span9 content">
  <%= create_guide("#{t 'process.independent_payment'}", 
        "#{t 'guide.office'}: <b>#{@office.name}</b>" + "<br />" + 
        "#{t 'guide.group_loan'}: <b>#{@group_loan.name}</b> " + "<br />" +  
        "Unpaid backlogs: <b>#{@group_loan.unpaid_backlogs.count}</b> "  + "<br />" + 
        "Approval Week: <b>#{@deadline_weekly_task.week_number}</b> " ).html_safe %>
  
  <%= create_breadcrumb(@breadcrumbs).html_safe %>
  
  
   
  <div class="row-fluid">
    <div id="data_list">
      <table cellpadding="0" cellspacing="0" border="0" 
            class="table table-striped table-bordered" id="example">
        <thead>
          <tr>
            <th><%= t 'report_metric.member' %></th>
            <th><%= t 'report_metric.sub_group'%></th>
            <th><%= t 'variable.address' %></th>
            <th><%= t 'report_metric.unpaid_backlogs' %></th>
            
          </tr>
        </thead>
        <tbody>
          <% @glm_list.each do |glm| %>
            <%= render :partial => "group_loans/independent_payment_member_entry" , 
                :locals => {:group_loan_membership => glm}%>
            
   
            
          <% end %>
       
          

        </tbody>
      </table>
    </div><!-- end of #data_list -->
  </div>
  
  <div class=" hidden" id="approve_propose_form_wrapper">
    <%= form_for GroupLoan.new, :url => execute_start_group_loan_url   do |f| %>
      <%= hidden_field_tag 'entity_id' , ''  %>
      <%= hidden_field_tag 'action_role', '' %>
      <%= hidden_field_tag 'action_value', '' %>
    <% end %>
  </div>
  
  
  
  <div class="modal" id="myModal" style="display:none;">
     <div class="modal-header">
       <a class="close" data-dismiss="modal">×</a>
       <h3>Modal header</h3>
     </div>
     <div class="modal-body">
       <p>One fine body…</p>
     </div>
     <div class="modal-footer">
       <a href="#" class="btn modal-closer"><%= t 'trigger.close' %></a>
       <!-- <a href="#" class="btn btn-primary">Save changes</a> -->
     </div>
   </div>
   
   

</div><!--/span-->















