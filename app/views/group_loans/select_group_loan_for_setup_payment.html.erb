
<div class="span9 content">
  <%= create_guide("Group Loan Setup", 
        "Setup group loan for office: <b>#{@office.name}</b>" + "<br />" + 
        "Total  Group Loan: <b>#{@started_group_loans.count}</b> ").html_safe %>
  
  <%#= create_breadcrumb(@breadcrumbs).html_safe %>
  
  
   
  <div class="row-fluid">
    <div id="data_list">
      <table cellpadding="0" cellspacing="0" border="0" 
            class="table table-striped table-bordered" id="example">
        <thead>
          <tr>
            <th>Nama Group</th>
            <th>Lokasi RW</th>
            <th>Total Member</th>
            <th>Paid Member</th>
            <th>Finalize</th>
          
          </tr>
        </thead>
        <tbody>
          <% @started_group_loans.each do |group_loan| %>
            <%= render :partial => "group_loans/group_loan_setup" , 
                :locals => {:group_loan => group_loan}%>
          <% end %>
       
          

        </tbody>
      </table>
    </div><!-- end of #data_list -->
  </div>
  
  <div class=" hidden" id="approve_propose_form_wrapper">
    <%= form_for GroupLoan.new, :url =>execute_propose_finalization_url   do |f| %>
      <%= hidden_field_tag 'entity_id' , ''  %>
      <%= hidden_field_tag 'action_role', '' %>
      <%= hidden_field_tag 'action_value', '' %>
    <% end %>
  </div>
  
  

</div><!--/span-->















