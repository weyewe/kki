
<div class="span9 content">
  <%= create_guide("Finalize Group Loan", 
        "Finalize group loan for office: <b>#{@office.name}</b>" + "<br />" + 
        "Total Active Group Loan: <b>#{@active_group_loans.count}</b> ").html_safe %>
  
  <%#= create_breadcrumb(@breadcrumbs).html_safe %>
  
  
   
  <div class="row-fluid">
    <div id="data_list">
      <table cellpadding="0" cellspacing="0" border="0" 
            class="table table-striped table-bordered" id="example">
        <thead>
          <tr>
            <th>Nama Group</th>
            <th>Lokasi RW</th>
            <th>Total Member</th>
            <th>Unassigned Member </th>
            <th>Finalize</th>
            <th>BM Approval</th>
            <!-- <th>Aggregated Principal</th>
                      <th>Aggregated Interest</th>
                      <th>Aggregated Interest Rate</th> -->
          </tr>
        </thead>
        <tbody>
          <% @active_group_loans.each do |group_loan| %>
            <tr id="finalize_group_loan-<%= group_loan.id %>">
              <td><%= link_to group_loan.name, new_group_loan_group_loan_subcription_url(group_loan) %></td>
              <td><%= group_loan.get_commune %></td>
              <td><%= group_loan.members.count %></td>
              <td><%= group_loan.unassigned_members.count %></td>
              <td style="text-align:center;">
                <a href="#" class="btn"
                id="finalize-<%= group_loan.id %>">Finalize</a>
              </td>
              <td style="text-align:center;"><span class="label">Pending</span></td>
              <!-- <td><%#=  print_money( group_loan.aggregated_principal_amount ) %></td>
                      <td><%#=  print_money( group_loan.aggregated_interest_amount ) %></td>
                      <td><%#=  group_loan.aggregated_interest_rate_percentage.to_s + " %" %></td> -->
            </tr>
            <tr id="finalize_group_loan-<%= group_loan.id %>">
              <td><%= link_to group_loan.name, new_group_loan_group_loan_subcription_url(group_loan) %></td>
              <td><%= group_loan.get_commune %></td>
              <td><%= group_loan.members.count %></td>
              <td><%= group_loan.unassigned_members.count %></td>
              <td style="text-align:center;"><span class="label label-info">Finalized</span></td>
              <td style="text-align:center;"><span class="label">Pending</span></td>
              <!-- <td><%#=  print_money( group_loan.aggregated_principal_amount ) %></td>
                      <td><%#=  print_money( group_loan.aggregated_interest_amount ) %></td>
                      <td><%#=  group_loan.aggregated_interest_rate_percentage.to_s + " %" %></td> -->
            </tr>
            
          <% end %>
       
          

        </tbody>
      </table>
    </div><!-- end of #data_list -->
  </div>

</div><!--/span-->















