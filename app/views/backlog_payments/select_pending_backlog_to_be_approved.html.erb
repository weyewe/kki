<div class="span9 content">
  <%= create_guide("Pending Backlog Payments", 
        "#{t 'guide.office'}: <b>#{@office.name}</b>" + "<br />" + 
        "#{t 'guide.pending_approval'}: <b>#{@transaction_activity_backlogs_pairs.count}</b> ").html_safe %>
  
  <%#= create_breadcrumb(@breadcrumbs).html_safe %>
  
  
   
  <div class="row-fluid">
    <div id="data_list">
      <table cellpadding="0" cellspacing="0" border="0" 
            class="table table-striped table-bordered" id="example">
        <thead>
          <tr>
            <th><%= t 'report_metric.member' %></th>
            <th>Field Worker ID</th>
            <th>Cash taken by field worker</th>
            <th><%= t 'variable.savings_withdrawal'%></th>
            <th>Number of Weeks Paid</th>
            
            <th colspan="2"><%= t 'trigger.action' %></th>
            
          </tr>
        </thead>
        <tbody>
          <% @transaction_activity_backlogs_pairs.each do |transaction_backlog| %>
            <%#= render :partial => "group_loans/group_loan_setup" , 
                :locals => {:group_loan => group_loan}%>
            <%= render :partial => "group_loans/execute_backlog_payment_approval" , 
                :locals => {:transaction_backlog => transaction_backlog}%>
          <% end %>
       
          

        </tbody>
      </table>
    </div><!-- end of #data_list -->
  </div>
  
  
  
  <div class=" hidden" id="approve_propose_form_wrapper">
    <%= form_for GroupLoan.new, :url => execute_backlog_payment_approval_by_cashier_url   do |f| %>
    <%= hidden_field_tag 'entity_id' , ''  %>
    <%= hidden_field_tag 'action_role', '' %>
    <%= hidden_field_tag 'action_value', '' %>
    <% end %>
  </div>


  <div class="modal" id="myModal" style="display:none;">
     <div class="modal-header">
       <a class="close" data-dismiss="modal">×</a>
       <h3>Modal header</h3>
     </div>
     <div class="modal-body">
       <p>One fine body…</p>
     </div>
     <div class="modal-footer">
       <a href="#" class="btn modal-closer"><%= t 'trigger.close' %></a> 
     </div>
   </div>
  
  
  

</div><!--/span-->















