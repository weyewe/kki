<div class="row-fluid  fade  in pane_wrapper" id="structured_multiple_payment" >
  <div class="span8">
    
    <%= form_tag  create_backlog_payment_url, 
      :method => :post, :id => "backlog_structured_multiple_form"  do  %>
      
      <%= hidden_field_tag 'member_id',
          member.id  %>
      <%= hidden_field_tag 'group_loan_id',
          group_loan.id  %>
    <table cellpadding="0" cellspacing="0" border="0" 
          class="table table-striped table-bordered" id="example">
      <thead>
        <tr><th colspan="2" style="text-align:center;">
          Backlog Payments 
        </th></tr>
      </thead>
      <tbody>
         
         
          
          <tr>
            <td><b>Min. Weekly Payment </b></td>
            <td><span class="input-xlarge uneditable-input"
              id="bp_display_min_weekly_payment">
              <%= print_money( group_loan_product.total_weekly_payment)%></span></td>
              
          </tr>
          
          <tr>
            <td><%= t 'variable.duration' %></td>
            <td id="calculator_duration">
              <div class="input-append">
                <span class="input-xlarge uneditable-input"
                  id="bp_display_weeks"></span>
                <span class="add-on">weeks</span>
              </div>
            </td>
            <%= hidden_field_tag 'bmf_weeks',
                '' %>
          </tr>
          
          <tr>
            <td><%= t 'variable.total_payment'%></td>
            <td id="calculator_duration">
              <div class="input-append">
                <b><span class="input-xlarge uneditable-input"
                  id="bp_display_total_payment"></span></b>
              </div>
            </td>
          </tr>
          
          
          
          <tr>
            <td>Cash</td>
            <td id="total_cash">
              <div class="input-append">
                <span class="input-xlarge uneditable-input" 
                  id="bp_display_cash"></span>
              </div>
            </td>
            <%= hidden_field_tag 'bmf_cash',
                '' %>
          </tr>
          
          
          
          <tr>
            <td><%= t 'variable.from_savings' %></td>
            <td><span class="input-xlarge uneditable-input" 
                id="bp_display_savings_withdrawal"></span></td>
            <%= hidden_field_tag 'bmf_savings_withdrawal',
                '' %>
          </tr>
          
          
          <tr>
            <td><b>Balance</b></td>
            <td><b><span class="input-xlarge uneditable-input"
              id="bp_display_balance"></span></b></td>
            <%= hidden_field_tag 'bmf_balance',
                '' %>
          </tr>
          
          
          <tr>
            <td colspan="2" style="text-align:center;">
              <button href="#" class="btn btn-primary" id="pay_backlog_and_save_balance">
                Pay and Save Balance
              </button>
            </td>
          </tr>
          
        
      </tbody>
    </table>
    
    <% end %>
   
    
  </div> 
    
    
    
  <div class="span4">
    
    <table cellpadding="0" cellspacing="0" border="0" 
          class="table table-striped table-bordered" id="example">
      <thead>
        <tr><th colspan="2" style="text-align:center;"><%= t 'guide.current_savings'%></th></tr>
      </thead>
      <tbody>
          <tr>
            <td><%= t 'variable.total_savings'%></td>
            <td id="total_principal"><%= print_money(member.total_savings)%> </td>
            <%= hidden_field_tag 'bp_total_savings_amount',
                member.total_savings.to_i %>
          </tr>
      </tbody>
    </table>
    
    
    <table cellpadding="0" cellspacing="0" border="0" 
          class="table table-striped table-bordered" id="example">
      <thead>
        <tr><th colspan="2" style="text-align:center;">Multiple Weeks Payment Calculator</th></tr>
      </thead>
      <tbody>
         
          <%= hidden_field_tag 'basic_weekly_payment_amount',
              group_loan_product.total_weekly_payment.to_i %>
          <%= hidden_field_tag 'total_backlog_weeks_payable',
              uncleared_backlog_payments.count  %>
          <tr>
            <td><b>Cash</b></td>
            <td id="total_cash">
              <div class="input-append">
                <input type="text" size="16"  class="span8" id="bp_calc_cash" >
              </div>
            </td>
          </tr>
          
          <tr>
            <td><b><%= t 'variable.duration' %></b></td>
            <td id="calculator_duration">
              <div class="input-append">
                <input type="text" size="16"  class="span5" id="bp_calc_weeks" >
                <span class="add-on"><%= t 'variable.weeks' %></span>
              </div>
            </td>
          </tr>  
         
          <tr>
            <td><b><%= t 'variable.savings_withdrawal'%></b></td>
            <td> <input type="text" size="16"  class="span8" id="bp_calc_savings_withdraw"> </td>
          </tr>
          
          <tr>
            <td colspan="2" style="text-align:center;">
              <button href="#" class="btn btn-primary"
               id="bp_simulate_structured_payment"><%= t 'trigger.simulate' %></button>
            </td>
          </tr>
          
        
      </tbody>
    </table>
    
  </div><!--/span-->
  
</div><!--/row-->


