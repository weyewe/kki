<div class="span9 content">
  <%= create_guide("Add New Group Loan Product", 
        "Create the group loan for: " + "<br />" + 
        "Office: #{@office.name}" + "<br />"    +  
        "Total Office Members: #{@group_loan_products.count} " + "(<a href='#data_list'>see all</a>)"          ).html_safe %>
        

  
  <%#= create_breadcrumb(@breadcrumbs).html_safe %>
  <% if flash[:notice] %>
    <div class="alert alert-success">
      <a data-dismiss="alert" class="close">×</a>
      <strong>Well done!</strong> <%= flash[:notice].html_safe %>
    </div>
  <% end %>
  
  <% if flash[:error] %>
    <div class="alert alert-error">
      <a data-dismiss="alert" class="close">×</a>
      <strong>Create Failure!</strong> Please fill in all required (*) fields.
    </div>
  <% end %>
  
  
  <div class="row-fluid">
    <div class="span8">
      <h2>New Group Loan Product details</h2><br />

      <%= simple_form_for(@new_group_loan_product, :html => {:class => 'form-horizontal' }) do |f| %>
        <%= f.input :principal , :input_html => {:class => "input-xlarge span5", :id =>"weekly_principal"}, 
        :hint => "Pembayaran Cicilan Principal Mingguan", :label => "Installment Principal" %>

        <%= f.input :interest, :input_html => {:class => "input-xlarge span5",:id =>"weekly_interest"  },
        :hint => "Pembayaran Bunga Mingguan", :label => "Interest Payment"%>

        <%= f.input :min_savings, :input_html => { :class => "input-xlarge span5" },
        :hint => "Minimum Tabungan Mingguan", :label => "Min Weekly Saving"%>

        <%= f.input :admin_fee, :input_html => {:class => "input-xlarge span5" },
        :hint => "Biaya administrasi awal" %>

        <%= f.input :initial_savings, :input_html => { :class => "input-xlarge span5" },
        :hint => "Jumlah tabungan minimum awal"%>

        <%= f.input :total_weeks, :input_html => {:class => "input-xlarge span5", :id => "duration" },
        :hint => "Jangka Waktu Pembayaran(minggu)" %>
        
        <div class="form-actions">
          <%= f.button :submit , :class => "btn btn-primary", :text=> "Create Group Loan Product" %>
        </div>
      <% end %>
      
      
     
      
    </div> 
      
      
      
    <div class="span4">
      <table cellpadding="0" cellspacing="0" border="0" 
            class="table table-striped table-bordered" id="example">
        <thead>
          <tr><th colspan="2" style="text-align:center;">Loan Calculator</th></tr>
        </thead>
        <tbody>
            <tr>
              <td>Principal (Rp)</td>
              <td id="total_principal">
                <div class="input-append">
                  <input type="text" size="16" id="appendedInput" class="span8" >
                  <span class="add-on">.00</span>
                </div>
              </td>
            </tr>
            <tr>
              <td>Interest</td>
              <td id="percentage_interest">
                <div class="input-append">
                  <input type="text" size="16" id="appendedInput" class="span8" >
                  <span class="add-on">%</span>
                </div>
              </td>
            </tr>
            
            <tr>
              <td>Duration</td>
              <td id="calculator_duration">
                <div class="input-append">
                  <input type="text" size="16" id="appendedInput" class="span5" >
                  <span class="add-on">weeks</span>
                </div>
              </td>
            </tr>
            
            <tr>
              <td colspan="2" style="text-align:center;">
                <button href="#" class="btn btn-primary" id="simulate_group_loan_product">Simulate</button>
              </td>
            </tr>
            
          
        </tbody>
      </table>
      
    </div><!--/span-->
    
  </div><!--/row-->
   <hr />
  <div class="row-fluid">
    <div id="data_list">
      <h2>Total Group Loan Products: <%= @group_loan_products.count %></h2>
      
      
      <table cellpadding="0" cellspacing="0" border="0" 
            class="table table-striped table-bordered" id="example">
        <thead>
          <tr>
            <th>Loan Amount</th>
            <th>Interest</th>
            
            <th>Weekly Principal</th>
            <th>Weekly Interest</th>
            <th>Min Saving</th>
            <th>Total Weekly Payment</th>
            <th>Duration (weeks)</th>
            
              
            
          </tr>
        </thead>
        <tbody>
          <% @group_loan_products.each do |group_loan_product| %>
            <tr>
              <td><%= print_money(group_loan_product.loan_amount )  %></td>
              <td><%= print_money( group_loan_product.interest_rate) %></td>
              
              <td><%= print_money( group_loan_product.principal ) %></td>
              <td><%= print_money( group_loan_product.interest ) %></td>
              <td><%= print_money( group_loan_product.min_savings ) %></td>
              <td><%= print_money( group_loan_product.total_weekly_payment ) %></td>
              <td><%= group_loan_product.total_weeks  %></td>
              
            </tr>
          <% end %>
        


        </tbody>
      </table>
    </div><!-- end of #data_list -->
  </div>

</div><!--/span-->
