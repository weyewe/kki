.jquery-msgbox-error
{
  background: url( <%= asset_path IMAGE_ASSET_URL[:error]  %>  ) no-repeat 20px 20px;
}

.jquery-msgbox-prompt
{
  background: url( <%= asset_path IMAGE_ASSET_URL[:question]  %>  ) no-repeat 20px 20px;
}

.jquery-msgbox-confirm
{
  background: url( <%= asset_path IMAGE_ASSET_URL[:confirm]  %>    ) no-repeat 20px 20px;
}